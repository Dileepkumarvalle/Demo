@model EmployeeData.Models.EmployeeViewModel

@{
    ViewData["Title"] = "Edit Employee";
    var errorMessage = TempData["errorMessage"]?.ToString();
    }
<h3>@ViewData["Title"]</h3>
<hr />
@if (!string.IsNullOrWhiteSpace(errorMessage))
{
    <div class=" alert alert-danger">
        <strong> Error! </strong>@errorMessage
        <button type="button" class="btn-close float-end" data-dismiss="alert" aria-label="Close"lab></button>

    </div>
}

<form action="Edit" method="post">
    <div class=" mb-3">
        <lable class="form-label"> Id</lable>
        <input type="text" class="form-control" asp-for="Id" readonly/>
         </div>
    <div class="mb-3">
        <label class="form-label">First Name</label>
        <input type="text" class="form-control" asp-for="FirstName" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Last Name</label>
        <input type="text" class="form-control" asp-for="LastName" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Dat of Birth</label>
        <input type="date" class="form-control" asp-for="DateofBirth" />
        <span asp-validation-for="DateofBirth" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">E-Mail</label>
        <input type="text" class="form-control" asp-for="Email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Salary</label>
        <input type="text" class="form-control" asp-for="Salary" />
        <span asp-validation-for="Salary" class="text-danger"></span>
    </div>

    <div class="d-grid">
        <button type="submit" class="btn-success">Update</button>
    </div>
   
</form>
